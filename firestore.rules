rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /config/{configFile} {
        allow write: if request.auth.uid != null;
        allow read: if true;
    }
    match /users/{userId} {
        allow write, read: if request.auth.uid != null;
    }
    match /chatsv2/{chatId} {
    		allow write: if request.auth.uid != null && request.resource.data.senderId == request.auth.uid;
        allow read: if request.auth.uid != null && (resource.data.recipientId == null || resource.data.recipientId == request.auth.uid || resource.data.senderId == request.auth.uid);
    }
    match /chats/{chatId} {
    		allow write, read: if request.auth.uid != null;
    }
  }
}
